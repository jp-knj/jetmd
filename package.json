{
  "name": "jetmd",
  "version": "0.0.0",
  "private": true,
  "description": "High-performance Markdown/MDX processor with WASM-first architecture",
  "author": "",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r --if-present build",
    "test": "pnpm -r --if-present test",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "clean": "pnpm -r clean",
    "changeset": "changeset",
    "version": "changeset version && pnpm install --no-frozen-lockfile",
    "release": "pnpm build && changeset publish",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.0",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "packageManager": "pnpm@8.14.0"
}
