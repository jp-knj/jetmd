{
  "$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noBannedTypes": "error",
        "noUselessConstructor": "error"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn"
      },
      "suspicious": {
        "noAssignInExpressions": "error"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useConst": "error",
        "noParameterAssign": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded",
      "trailingComma": "all",
      "arrowParentheses": "always"
    }
  },
  "files": {
    "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.mjs", "**/*.cjs"],
    "ignore": [
      "**/node_modules",
      "**/dist",
      "**/build",
      "**/coverage",
      "**/*.min.js",
      "**/target/**",
      "target/**",
      "crates/*/target/**",
      "crates/*/pkg/**",
      "crates/fmd-wasm/packages/wasm/**",
      "crates/fmd-cli/packages/**",
      "packages/*/dist/**",
      "packages/wasm/**",
      ".changeset/**",
      "pkg/**",
      "**/*.rs",
      "**/*.md",
      "**/*.toml",
      "**/*.yaml",
      "**/*.yml",
      "**/*.html",
      "**/*.sh",
      "**/*.mdx",
      ".husky/**"
    ]
  }
}
