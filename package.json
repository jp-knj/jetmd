{
  "name": "jetmd",
  "version": "0.0.0",
  "private": true,
  "description": "High-performance Markdown/MDX processor with WASM-first architecture",
  "author": "JetMD Contributors",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r --if-present build",
    "test": "pnpm -r --if-present test",
    "lint": "biome check packages/ demo/",
    "lint:fix": "biome check --apply packages/ demo/",
    "format": "biome format --write .",
    "clean": "pnpm -r clean",
    "changeset": "changeset",
    "version": "changeset version && pnpm install --no-frozen-lockfile",
    "release": "pnpm build && changeset publish",
    "prepare": "husky install",
    "build:all": "pnpm -r build",
    "test:all": "pnpm -r test",
    "lint:all": "pnpm -r lint",
    "format:all": "pnpm -r format",
    "bench:all": "cargo bench --workspace",
    "release:build": "scripts/build-release.sh",
    "release:verify": "scripts/verify-release.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.0",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jp-knj/jetmd.git"
  },
  "bugs": {
    "url": "https://github.com/jp-knj/jetmd/issues"
  },
  "homepage": "https://github.com/jp-knj/jetmd",
  "packageManager": "pnpm@8.14.0",
  "pnpm": {
    "overrides": {
      "acorn": "^8.11.0",
      "acorn-jsx": "^5.3.2",
      "chalk": "^5.3.0",
      "chokidar": "^3.5.3",
      "commander": "^11.0.0",
      "gray-matter": "^4.0.3",
      "@rollup/pluginutils": "^5.0.0",
      "vite": "^5.0.0",
      "astro": "^4.0.0"
    }
  }
}
